{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "name": "Vite: Firefox",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Vite: Node",
            "outputCapture": "std",
            "program": "./node_modules/vite/bin/vite.js",
            "args": ["--port", "3000"],
        }
    ],
    "compounds": [
        {
            "name": "Vite: Full",
            "configurations": ["Vite: Node", "Vite: Firefox"]
        }
    ]
}